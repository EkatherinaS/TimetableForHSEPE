<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/UserInterfaceStyle"
    android:weightSum="30" >

    <TextView
        android:id="@+id/professorChoice"
        style="@style/headerTextViewStyle"
        android:layout_marginVertical="10dp"
        android:layout_weight="2"
        android:text="@string/professorChoice" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Spinner
        style="@style/simpleTextViewStyle"
        android:id="@+id/groupList"
        android:layout_weight="1"
        android:contentDescription="@string/groupChoice"
        android:minHeight="48dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nowText"
            style="@style/headerTextViewStyle"
            android:layout_width="wrap_content"
            android:paddingEnd = "0dp"
            android:text="@string/nowText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            style="@style/simpleTextViewStyle"
            android:text="@string/todayDate" />

    </LinearLayout>

    <TextView
        android:id="@+id/status"
        style="@style/simpleTextViewStyle"
        android:text="@string/stubStatus" />

    <TextView
        android:id="@+id/subject"
        style="@style/simpleTextViewStyle"
        android:text="@string/stubSubject" />

    <TextView
        android:id="@+id/cabinet"
        style="@style/simpleTextViewStyle"
        android:text="@string/stubCabinet" />

    <TextView
        android:id="@+id/corp"
        style="@style/simpleTextViewStyle"
        android:text="@string/stubCorp" />

    <TextView
        android:id="@+id/professor"
        style="@style/simpleTextViewStyle"
        android:text="@string/stubProfessor" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/schedule_day"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/btnDayTimetable" />

        <Button
            android:id="@+id/schedule_week"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/btnWeekTimetable" />

    </LinearLayout>
</LinearLayout>